<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_URI} ^.*\.(css|ico)$ [NC]
  RewriteRule ^(.*)$ /public/$1

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_URI} !^.*\.(css|ico)$ [NC]
  RewriteRule ^(.*)$ public/index.php [L,QSA]
</IfModule>
